<script>
	var save_url = '${save_url}';
	
	function save() {
		//loading
		var index = layer.load(1, {
			shade : [ 0.1, '#fff' ]
		//0.1透明度的白色背景
		});
		
		var menuStr = $("#menuStr").val();
		
		$.post(save_url, {
			menuStr : menuStr
		}, function(result) {
			if (result.success) {
				//调用 父窗口的  关闭所有窗口 并且刷新 页面
				layer.closeAll();
				layer.msg(result.msg);
			} else {
				layer.closeAll();
				layer.msg(result.msg);
			}
		}, 'json');
	}
</script>
